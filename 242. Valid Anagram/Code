class Solution {
    public boolean isAnagram(String s, String t) {
        
        char[] A = s.toCharArray();
        char[] B = t.toCharArray();
        
        Arrays.sort(A);
        Arrays.sort(B);
        
        String temp1 = String.valueOf(A);
        String temp2 = String.valueOf(B);
        
        return temp1.equals(temp2);
        
    }
}

// Arrays.sort() method consists of two variations one in which we do not pass any arguments where it sort down the complete array be it integer array or character array
